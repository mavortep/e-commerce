@model IEnumerable<Domain.Entities.Dish>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<div class="panel panel-default">	

	<div class="panel-heading">
		Список товаров
	</div>	

	<div class="panel-body">	
		<table class="table table-striped table-condensed table-bordered">
			<tr>
				<th class="text-right">
					@Html.DisplayNameFor(model => model.DishId)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Style)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Producer)
				</th>
				<th class="text-right">
					@Html.DisplayNameFor(model => model.Price)
				</th>
				<th class="text-right">
					@Html.DisplayNameFor(model => model.ImageUrl)
				</th>
				<th class="text-center">
					Действия
				</th>
			</tr>

		@foreach (var item in Model) {
			<tr>
				<td class="text-right">
					@item.DishId
				</td>
				<td>
					@Html.ActionLink(item.Style, "Edit", new { item.DishId})
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Producer)
				</td>
				<td class="text-right">
					@Html.DisplayFor(modelItem => item.Price)
				</td>
				<td class="text-right">
					<strong>
						<img src="@Url.Content("~/" + item.ImageUrl)" height="100" width="100" />
					</strong>
				</td>
				<td class="text-center">
					@using (Html.BeginForm("Delete", "Admin"))
					{
						@Html.Hidden("DishId", item.DishId)
						<input type="submit" class="btn-default btn-xs" value="Удалить"/>
					}
				</td>
			</tr>
		}

		</table>
	</div>

	@*<div class="panel-footer">
		@Html.ActionLink("Добавить", "Create", null, new { @class = "btn btn-default"})
	</div>*@
</div>
